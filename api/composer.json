{
    "name": "kiloshare/api",
    "description": "KiloShare API - Refactored with Illuminate ORM",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": "^8.1",
        "cloudinary/cloudinary_php": "^2.13",
        "firebase/php-jwt": "^6.8",
        "kreait/firebase-php": "^7.9",
        "getbrevo/brevo-php": "^1.0",
        "illuminate/database": "^10.0",
        "illuminate/events": "^10.48",
        "league/fractal": "^0.20",
        "monolog/monolog": "^3.4",
        "nesbot/carbon": "^2.68",
        "php-di/slim-bridge": "^3.4",
        "phpmailer/phpmailer": "^6.8",
        "predis/predis": "^2.2",
        "ramsey/uuid": "^4.7",
        "respect/validation": "^2.2",
        "slim/psr7": "^1.6",
        "slim/slim": "^4.12",
        "stripe/stripe-php": "^12.0",
        "vlucas/phpdotenv": "^5.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6"
    },
    "autoload": {
        "psr-4": {
            "KiloShare\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "scripts": {
        "test": "phpunit",
        "stan": "phpstan analyse src",
        "cs-fix": "phpcbf",
        "cs-check": "phpcs"
    }
}
